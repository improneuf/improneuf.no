<section class="hero">
    <div class="container hero-content">
        <h1>IMPRO NEUF</h1>
        <p class="tagline">Oslo's international improv community</p>
        <div class="hero-actions">
            <a href="/en/#workshops" class="btn btn-black">WORKSHOPS</a>
            <a href="/en/#shows" class="btn btn-primary">SHOWS</a>
        </div>
    </div>
</section>

<style>
    .hero {
        height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: var(--color-gray-light);
    }

    .hero-content h1 {
        font-size: 5rem;
        letter-spacing: 0.2rem;
        margin-bottom: 1rem;
    }

    .tagline {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .hero-actions {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
    }

    .btn {
        font-size: 1.1rem;
        padding: 1rem 2.5rem;
    }

    @media (max-width: 768px) {
        .hero-content h1 {
            font-size: 3rem;
        }
        .tagline {
            font-size: 1.1rem;
        }
    }
</style>
