---
interface Props {
    title: string;
    description: string;
    image?: string;
    link: string;
    linkText: string;
}

const { title, description, link, linkText } = Astro.props;
---

<div class="feature-card">
    <div class="card-content">
        <h2>{title}</h2>
        <p>{description}</p>
        <a href={link} class="btn btn-black">{linkText}</a>
    </div>
</div>

<style>
    .feature-card {
        background: var(--color-white);
        border: 1px solid var(--color-gray-light);
        border-radius: 12px;
        padding: 2.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    }

    .card-content h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .card-content p {
        margin-bottom: 2rem;
        color: #555;
        font-size: 1.1rem;
    }

    .btn {
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 1px;
    }
</style>
