---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const aboutLinks = [
    {
        slug: "history",
        title: "Vår historie",
        description: "Fra en sped begynnelse til et blomstrende samfunn.",
    },
    {
        slug: "roles",
        title: "Roller",
        description: "Menneskene som får magien til å skje.",
    },
    {
        slug: "teams",
        title: "Grupper",
        description: "Vårt mangfoldige utvalg av improvisasjonsteam.",
    },
    {
        slug: "where",
        title: "Hvor",
        description: "Finn oss på våre hovedsteder i Oslo.",
    },
    { slug: "who", title: "Hvem", description: "Ansiktene til Impro Neuf." },
];
---

<BaseLayout title="Om oss">
    <section class="section">
        <div class="container">
            <h1 class="page-title">Om oss</h1>
            <p class="intro">
                Lær mer om Oslos største internasjonale impro-samfunn.
            </p>

            <div class="tile-grid">
                {
                    aboutLinks.map((link) => (
                        <a href={`/no/about/${link.slug}`} class="tile">
                            <h3>{link.title}</h3>
                            <p>{link.description}</p>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    .page-title {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
    .intro {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 3rem;
    }
    .tile-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }
    .tile {
        background: var(--color-gray-light);
        padding: 2rem;
        border-radius: 8px;
        transition:
            background 0.2s,
            transform 0.2s;
    }
    .tile:hover {
        background: #eef;
        transform: translateY(-2px);
    }
    .tile h3 {
        margin-bottom: 0.5rem;
    }
</style>
