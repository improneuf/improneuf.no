---
import BaseLayout from "../../../layouts/BaseLayout.astro";

export function getStaticPaths() {
    return [
        {
            params: { slug: "joinimprovteam" },
            props: { title: "Nytt improvisasjonsteam (mixer)" },
        },
    ];
}

const { slug } = Astro.params;
const { title } = Astro.props;
---

<BaseLayout title={title}>
    <section class="section">
        <div class="container">
            <h1 class="page-title">{title}</h1>
            <div class="content">
                <p>
                    Dette er en skjelettside for <strong>{title}</strong>. Vil
                    du bli med i et team eller starte et nytt? Du er på rett
                    sted.
                </p>

                <div class="placeholder-block">
                    [Informasjon om å bli med i team og mixer-økter vil bli
                    plassert her]
                </div>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    .page-title {
        font-size: 3.5rem;
        margin-bottom: 2rem;
    }
    .content {
        max-width: 800px;
        font-size: 1.2rem;
    }
    .placeholder-block {
        margin-top: 3rem;
        padding: 4rem;
        background: var(--color-gray-light);
        border: 2px dashed #ccc;
        text-align: center;
        color: #999;
    }
</style>
