---
import BaseLayout from "../../../layouts/BaseLayout.astro";

export function getStaticPaths() {
    return [
        {
            params: { slug: "codeofconduct" },
            props: { title: "Code of Conduct" },
        },
        {
            params: { slug: "privacypolicy" },
            props: { title: "Privacy Policy" },
        },
        {
            params: { slug: "termsofsale" },
            props: { title: "Terms of Sale" },
        },
    ];
}

const { slug } = Astro.params;
const { title } = Astro.props;
---

<BaseLayout title={title}>
    <section class="section">
        <div class="container">
            <h1 class="page-title">{title}</h1>
            <div class="content">
                <p>
                    This is a skeleton page for <strong>{title}</strong>. We are
                    committed to providing a safe and transparent environment
                    for our community.
                </p>

                <div class="placeholder-block">
                    [Official {title} text will be placed here]
                </div>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    .page-title {
        font-size: 3rem;
        margin-bottom: 2rem;
    }
    .content {
        max-width: 800px;
        font-size: 1.2rem;
    }
    .placeholder-block {
        margin-top: 3rem;
        padding: 4rem;
        background: var(--color-gray-light);
        border: 2px dashed #ccc;
        text-align: center;
        color: #999;
    }
</style>
