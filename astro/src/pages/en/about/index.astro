---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const aboutLinks = [
    {
        slug: "history",
        title: "Our History",
        description: "From humble beginnings to a thriving community.",
    },
    {
        slug: "roles",
        title: "Roles",
        description: "The people who make the magic happen.",
    },
    {
        slug: "teams",
        title: "Teams",
        description: "Our diverse range of improv teams.",
    },
    {
        slug: "where",
        title: "Where",
        description: "Find us at our main locations in Oslo.",
    },
    { slug: "who", title: "Who", description: "The faces of Impro Neuf." },
];
---

<BaseLayout title="About Us">
    <section class="section">
        <div class="container">
            <h1 class="page-title">About Us</h1>
            <p class="intro">
                Learn more about Oslo's biggest international improv community.
            </p>

            <div class="tile-grid">
                {
                    aboutLinks.map((link) => (
                        <a href={`/en/about/${link.slug}`} class="tile">
                            <h3>{link.title}</h3>
                            <p>{link.description}</p>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    .page-title {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
    .intro {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 3rem;
    }
    .tile-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }
    .tile {
        background: var(--color-gray-light);
        padding: 2rem;
        border-radius: 8px;
        transition:
            background 0.2s,
            transform 0.2s;
    }
    .tile:hover {
        background: #eef;
        transform: translateY(-2px);
    }
    .tile h3 {
        margin-bottom: 0.5rem;
    }
</style>
